<Window x:Class="Flow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flow"
        mc:Ignorable="d"
        Title="FlowDocument Demostration" Height="200" Width="400" ResizeMode="NoResize">
    <Grid>
        <FlowDocumentScrollViewer IsToolBarVisible="True" Zoom="80" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph FontSize="36" FontFamily="Tahoma, Verdana, Segoe, sans-serif" TextAlignment="Center" FontWeight="Thin">Kiubo</Paragraph>
                <Paragraph FontStyle="Italic" TextAlignment="Center" FontSize="14" Foreground="Purple" FontWeight="Bold">¡Bienvenidos a mi programa!</Paragraph>
                <Paragraph FontStyle="Oblique" TextAlignment="Justify" FontSize="14" Foreground="Gray"> Es importante saber que, este programa fue realizado con la finalidad de ejecutar por primera vez el zoom y ver su estructura para poder emplearlo en códigos futuros.</Paragraph>
            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Grid>
</Window>
